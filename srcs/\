#include "../include/push_swap.h"
#include "../libft/libft.h"
#include <stdio.h>

int fill_stack(int *stacks, char **argv, int argc)
{
	int d;

	d = 0;
	while (d < argc -1)
	{
		stacks[d] = ft_atoi(argv[d + 1]);
		d++;
	}
	return (1);
}

void print_stacks(int *stack, int argc)
{
	int d;

	d = 0;
	printf("stack 1          stack 2\n");
	while (d < argc - 1)
	{
		printf("%d : %d          ", d, stack[d]);
		printf("%d \n", stack[d + argc - 1]);
		d++;
	}

}


int	main(int argc, char **argv)
{
	int *stacks;

	stacks = (int *)(malloc((sizeof(int) * (argc - 1)) * 2));
	fill_stack(stacks, argv, argc);
	print_stacks(stacks, argc);

	swap_a(stacks, argc - 2);
	printf("\n\n\n\n");
	print_stacks(stacks, argc);
	swap_a(stacks, argc - 2);
	printf("\n\n\n\n");
	print_stacks(stacks, argc);
	free (stacks);
	return 0;
}
